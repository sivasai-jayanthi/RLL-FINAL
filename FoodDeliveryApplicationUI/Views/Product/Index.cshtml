@model List<FoodDeliveryApplicationUI.Models.ProductViewModel>

@{
    ViewBag.Title = "Product List";
}

<h2>Product List</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td><img src="~/Images/@product.ImageFileName" alt="Product Image" style="max-width: 100px; max-height: 100px;" /></td>
                <td class="align-middle">@product.Name</td>
                <td class="align-middle">@product.Description</td>
                <td class="align-middle">$@product.Price</td>
                <td class="align-middle">
                    <a href="@Url.Action("Edit", "Product", new { id = product.ProductId })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", "Product", new { id = product.ProductId })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
